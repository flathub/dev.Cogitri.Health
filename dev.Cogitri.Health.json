{
    "app-id" : "dev.Cogitri.Health",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.38",
    "sdk" : "org.gnome.Sdk",
    "command" : "dev.Cogitri.Health",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a",
        "/lib/librest-extras*",
        "/lib/girepository-1.0",
        "/share/gir-1.0",
        "/bin/gtk4*",
        "/bin/pango*",
        "/bin/sassc"
    ],
    "modules" : [
        {
            "name" : "pango",
            "buildsystem" : "meson",
            "sources" :  [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/pango/1.48/pango-1.48.0.tar.xz",
                    "sha256" : "391f26f3341c2d7053e0fb26a956bd42360dadd825efe7088b1e9340a65e74e6"
                }
            ]
        },
        {
            "name": "libsass",
            "sources": [
                {
                    "type" : "archive",
                    "url" : "https://github.com/sass/libsass/archive/3.6.4.tar.gz",
                    "sha256": "f9484d9a6df60576e791566eab2f757a97fd414fce01dd41fc0a693ea5db2889"
                },
                {
                    "type" : "script",
                    "dest-filename" : "autogen.sh",
                    "commands" : [ "autoreconf -si" ]
                }
            ]
        },
        {
            "name": "sassc",
            "sources": [
                {
                    "type" : "archive",
                    "url" : "https://github.com/sass/sassc/archive/3.6.1.tar.gz",
                    "sha256": "8cee391c49a102b4464f86fc40c4ceac3a2ada52a89c4c933d8348e3e4542a60"
                },
                {
                    "type" : "script",
                    "dest-filename" : "autogen.sh",
                    "commands" : [ "autoreconf -si" ]
                }
            ]
        },
        {
            "name" : "gtk4",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddemos=false",
                "-Dbuild-examples=false",
                "-Dbuild-tests=false"
            ],
            "sources" :  [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/gtk/4.0/gtk-4.0.2.tar.xz",
                    "sha256" : "626707ac6751426ed76fed49c5b2d052dfee45757ce3827088ba87ca7f1dbc84"
                }
            ]
        },
        {
            "name" : "libadwaita",
            "buildsystem": "meson",
            "config-opts" : [
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources" : [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/exalm/libadwaita",
                    "commit": "3733ab6625e414dcf1c76175872a9a8d92de27c6"
                },
                {
                    "type": "patch",
                    "path": "libadwaita-dark-theme.patch"
                }
            ]
        },
        {
            "name": "rest",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/rest/0.8/rest-0.8.1.tar.xz",
                    "sha256": "0513aad38e5d3cedd4ae3c551634e3be1b9baaa79775e53b2dba9456f15b01c9"
                }
            ]
        },
        {
            "name" : "Health",
            "buildsystem" : "meson",
            "build-options": {
            	"env": {
            	    "VALAFLAGS": "--vapidir=../"
            	}
            },
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/Cogitri/gnome-health/-/package_files/53/download",
                    "dest-filename": "dev.Cogitri.Health-0.91.0.tar.xz",
                    "sha256": "fce7000c3f690742610f4ca33cceba5e059cf7a0fe421a4a99c255a250154267"
                },
                {
                    "type": "file",
                    "url": "https://gitlab.gnome.org/GNOME/vala/-/raw/17f12b289bdd6224770dbf296dcd8b7b5632bdde/vapi/gtk4.vapi",
                    "sha256": "235c290b340030fbb3a43d5e1b91f818ab14ed4e7791ba6128d4cea6b8885a48"
                },
                {
                    "type": "file",
                    "url": "https://gitlab.gnome.org/GNOME/vala/-/raw/ab9f7e36b018492f6f50757673b58663f408754b/vapi/gtk4.deps",
                    "sha256": "2eeb65edc470f5b3752b82c7971aa6aeeb7083dd4b8bec3e38669a582e39a587"
                }
            ]
        }
    ]
}
