{
    "app-id": "dev.Cogitri.Health",
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "dev.Cogitri.Health",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--talk-name=org.freedesktop.secrets",
        "--share=network"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a",
        "/lib/girepository-1.0",
        "/share/gir-1.0",
        "/bin/sassc"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/Health/cargo",
            "RUSTFLAGS": "-L=/app/lib",
            "RUST_BACKTRACE": "1"
        }
    },
    "modules": [
        {
            "name": "blueprintcompiler",
            "buildsystem": "meson",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "commit": "93f2a27e35905420e70bfdb5c2f04d6af43b357d"
                }
            ]
        },
        {
            "name": "tracker",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "-Dman=false",
                "-Dsystemd_user_services=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/tracker/3.3/tracker-3.3.2.tar.xz",
                    "sha512": "2009c7a9b82fd278e38bc71cb41ef1fccb23493bd84a71456c7568ed7a025ce68bab689b8f14b8008479a203a5fdc02acea1862f4f482467ed5c295bde3d4ad8"
                }
            ]
        },
        {
            "name": "Health",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/World/Health/-/package_files/137/download",
                    "archive-type": "tar-xz",
                    "sha256": "bc262e62b5a193344034d41dab0a0232309cd18afe17240110e351d07f3eb33b",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://gitlab.gnome.org/api/v4/projects/World%2FHealth/releases",
                        "tag-query": ".[0].tag_name",
                        "version-query": "$tag",
                        "timestamp-query": ".[0].released_at",
                        "url-query": ".[0].assets.links[] | select(.name==\"Health-\" + $version + \".tar.xz\") | .direct_asset_url"
                    }
                }
            ]
        }
    ]
}
