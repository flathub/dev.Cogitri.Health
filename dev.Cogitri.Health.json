{
    "app-id": "dev.Cogitri.Health",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "dev.Cogitri.Health",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--talk-name=org.freedesktop.secrets",
        "--share=network"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a",
        "/lib/girepository-1.0",
        "/share/gir-1.0",
        "/bin/sassc"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/Health/cargo",
            "RUSTFLAGS": "-L=/app/lib",
            "RUST_BACKTRACE": "1"
        }
    },
    "modules": [
        {
            "name": "Health",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/World/Health/-/package_files/63/download",
                    "archive-type": "tar-xz",
                    "sha256": "0d6286addbf5c9b31917d35f9edda79a10e95c2c903f93676cb648dd3b2b7c2f",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://gitlab.gnome.org/api/v4/projects/World%2FHealth/releases",
                        "tag-query": ".[0].tag_name",
                        "version-query": "$tag",
                        "timestamp-query": ".[0].released_at",
                        "url-query": ".[0].assets.links[] | select(.name==\"Health-\" + $version + \".tar.xz\") | .direct_asset_url"
                    }
                }
            ]
        }
    ]
}
