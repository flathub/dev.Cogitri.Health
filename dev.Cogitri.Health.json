{
    "app-id" : "dev.Cogitri.Health",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "dev.Cogitri.Health",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--talk-name=org.freedesktop.secrets",
        "--share=network"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a",
        "/lib/girepository-1.0",
        "/share/gir-1.0"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/Health/cargo",
            "RUSTFLAGS" : "-L=/app/lib",
            "RUST_BACKTRACE": "1"
        }
    },
    "modules" : [
        {
            "name": "libadwaita",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [
                "-Dprofiling=false",
                "-Dintrospection=enabled",
                "-Dgtk_doc=false",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dvapi=false",
                "-Dglade_catalog=disabled"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/exalm/libadwaita",
                    "commit": "660d529a6abb571fb592353f67d56915cb5abe54"
                }
            ]
        },
        {
            "name" : "Health",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/Cogitri/Health/-/package_files/56/download",
                    "dest-filename": "Health-0.92.6.tar.xz",
                    "sha256": "52ac3bcd046c6d4181e3c088214a5282926ff47fdf392ee9c0374491d0b89768"
                }
            ]
        }
    ]
}
