{
    "app-id" : "dev.Cogitri.Health",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.38",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "dev.Cogitri.Health",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--talk-name=org.freedesktop.secrets",
        "--share=network"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a",
        "/lib/girepository-1.0",
        "/share/gir-1.0"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/Health/cargo",
            "RUSTFLAGS" : "-L=/app/lib",
            "RUST_BACKTRACE": "1"
        }
    },
    "modules" : [
        {
            "name" : "pango",
            "buildsystem" : "meson",
            "sources" :  [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/pango/1.48/pango-1.48.3.tar.xz",
                    "sha256" : "36ea145c82217c8efc954d02aa577391b1d9a5da205e0aef7ffe0461349b4b46"
                }
            ]
        },
        {
            "name": "libsass",
            "sources": [
                {
                    "type" : "archive",
                    "url" : "https://github.com/sass/libsass/archive/3.6.4.tar.gz",
                    "sha256": "f9484d9a6df60576e791566eab2f757a97fd414fce01dd41fc0a693ea5db2889"
                },
                {
                    "type" : "script",
                    "dest-filename" : "autogen.sh",
                    "commands" : [ "autoreconf -si" ]
                }
            ]
        },
        {
            "name": "sassc",
            "sources": [
                {
                    "type" : "archive",
                    "url" : "https://github.com/sass/sassc/archive/3.6.1.tar.gz",
                    "sha256": "8cee391c49a102b4464f86fc40c4ceac3a2ada52a89c4c933d8348e3e4542a60"
                },
                {
                    "type" : "script",
                    "dest-filename" : "autogen.sh",
                    "commands" : [ "autoreconf -si" ]
                }
            ]
        },
        {
            "name" : "gtk4",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddemos=false",
                "-Dbuild-examples=false",
                "-Dbuild-tests=false"
            ],
            "sources" :  [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/gtk/4.0/gtk-4.0.3.tar.xz",
                    "sha256" : "d7c9893725790b50bd9a3bb278856d9d543b44b6b9b951d7b60e7bdecc131890"
                }
            ]
        },
        {
            "name": "libadwaita",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [
                "-Dprofiling=false",
                "-Dintrospection=enabled",
                "-Dgtk_doc=false",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dvapi=false",
                "-Dglade_catalog=disabled"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/exalm/libadwaita",
                    "commit": "660d529a6abb571fb592353f67d56915cb5abe54"
                }
            ]
        },
        {
            "name" : "Health",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/Cogitri/Health/-/package_files/55/download",
                    "dest-filename": "Health.tar.xz",
                    "sha256": "a375668d0ce964555367ab73eff79a4851c24709529c47e1292b9288f3263464"
                }
            ]
        }
    ]
}
