{
    "app-id": "dev.Cogitri.Health",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm19"
    ],
    "command": "dev.Cogitri.Health",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--talk-name=org.freedesktop.secrets",
        "--share=network"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a",
        "/lib/girepository-1.0",
        "/share/gir-1.0",
        "/bin/sassc"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm19/bin",
        "env": {
            "CARGO_REGISTRIES_CRATES_IO_PROTOCOL": "sparse",
            "CARGO_TARGET_X86_64_UNKNOWN_LINUX_GNU_LINKER": "clang",
            "CARGO_TARGET_X86_64_UNKNOWN_LINUX_GNU_RUSTFLAGS": "-C link-arg=-fuse-ld=/usr/lib/sdk/rust-stable/bin/mold",
            "CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_LINKER": "clang",
            "CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_RUSTFLAGS": "-C link-arg=-fuse-ld=/usr/lib/sdk/rust-stable/bin/mold",
            "RUST_BACKTRACE": "1"
        }
    },
    "modules": [
        {
            "name": "blueprintcompiler",
            "buildsystem": "meson",
            "builddir": true,
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "commit": "2a39a16391122af2f3d812e478c1c1398c98b972"
                }
            ]
        },
        {
            "name": "Health",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/World/Health/uploads/5c2f3e11a5fff57edb2238ff3df1c742/Health-0.95.0.tar.xz",
                    "sha256": "48108b55456b340ac32fa2671597fb5ca010b67117bb7c0ade4e1cdaf5ab152d"
                },
                {
                    "type": "patch",
                    "path": "fix_appdata.patch"
                }
            ]
        }
    ]
}
